<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spielplan | LEV MV</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>
<body>
  <header id="navbar">
    <nav class="navbar-container container">
      <a href="/" class="home-link">
        <div class="navbar-logo"><img src="/images/lev.png" height="90%" alt=""></div>
        LEV MV
      </a>
      <button type="button" id="navbar-toggle" aria-controls="navbar-menu" aria-label="Toggle menu" aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div id="navbar-menu" aria-labelledby="navbar-toggle">
        <ul class="navbar-links">
          <li class="navbar-item"><a class="navbar-link" href="/<%= liga %>/">Startseite</a></li>
          <li class="navbar-item"><a class="navbar-link" href="/<%= liga %>/spielplan">Spielplan</a></li>
          <li class="navbar-item"><a class="navbar-link" href="/<%= liga %>/tabelle">Tabelle</a></li>
          <li class="navbar-item"><a class="navbar-link" href="/<%= liga == 'u15' ? 'ostseeliga' : 'u15' %>"><%= liga == 'u15' ? 'Ostseeliga' : 'U13 / U15' %></a></li>
        </ul>
      </div>
    </nav>
  </header>
    <div class="item" id="oberligaN">
      <h2>Live</h2> <br>
        <table>
            <thead>
                <td class="date">Datum</td>
                <td class="time">Uhrzeit</td>
                <td class="home">Heim</td>
                <td class="homeShort">Heim</td>
                <td class="gameLogo"></td>
                <td class="score"></td>
                <td class="vs"></td>
                <td class="score"></td>
                <td class="overtime">OT</td>
                <td class="gameLogo"></td>
                <td class="away">Gast</td>
                <td class="awayShort">Gast</td>
            </thead>
            <tbody>
              <% live.forEach(element => { %>
                <tr>
                      <td class="date"><%= element.date %></td>
                      <td class="time"><%= element.time %></td>
                      <td class="home"><%= element.home %></td>
                      <td class="homeShort"><%= element.logoHome %></td>
                      <td class="gameLogo"><img width="100%" src="/images/tn_<%= element.logoHome %>.png"/></td>
                      <td id="<%= element.live %>" class="score"><%= element.scoreHome %></td>
                      <td id="<%= element.live %>" class="vs">:</td>
                      <td id="<%= element.live %>" class="score"><%= element.scoreAway %></td>
                      <td class="overtime <%= element.overtime %>">OT</td>
                      <td class="gameLogo"><img width="100%" src="/images/tn_<%= element.logoAway %>.png"/></td>
                      <td class="away"><%= element.away %></td>
                      <td class="awayShort"><%= element.logoAway %></td>
              </tr>
              <% }) %>
            </tbody>
        </table>
    </div>

    <script src="/js/nav.js"></script>
</body>
</html>